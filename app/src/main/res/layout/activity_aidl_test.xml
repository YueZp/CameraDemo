<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.yuezp.ipc.AidlTestActivity"
        >

    <Button
            android:text="开启服务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_service"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            />
    <Button
            android:text="关闭服务"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close_service"
            />
    <Button
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="添加学生"
            android:layout_below="@id/start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_student"
            />
    <Button
            android:text="获取学生"
            android:layout_below="@id/close_service"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/get_students"
            />
    <TextView
            android:text="TextView"
            android:layout_width="32dp"
            android:layout_height="495dp"
            android:id="@+id/textView"
            android:layout_below="@id/get_students"
            android:layout_margin="30dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            />
</RelativeLayout>

